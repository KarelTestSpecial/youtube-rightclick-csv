{
  "manifest_version": 3,
  "name": "YouTube Rightclick Link Collector",
  "version": "2.5.6.1",
  "description": "Easily add YouTube video URLs to your own custom lists. Very easily copy them to Spreadsheets.",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
